extends layout

block content
    .bgimage_login
        form.login-form(action='/users/submit')
			h1 Login
			.register-txtb
				input(type='text')
				span(data-placeholder='Username')
			.register-txtb
				input(type='text')
				span(data-placeholder='Username')
			.register-txtb
				input(type='password')
				span(data-placeholder='Password')
			.register-txtb
				input(type='password')
				span(data-placeholder='Re-type Password')
			input.register-btn(type='submit', value='Register')
			.register-bottom-text
				| Don't have account? 
				a(href='#') Sign up


    script.
        $(".register-txtb input").on("focus",function(){
        $(this).addClass("register-focus");
        });
        $(".register-txtb input").on("blur",function(){
        if($(this).val() == "")
        $(this).removeClass("register-focus");
        });





